/* pages/membershipCard/membershipCard.wxss */
page {
  height: 100%;
}

.membershipCard {
  position: relative;
  width: 100%;
  height: 100%;
  background: url('http://llwell-wxapp.oss-cn-beijing.aliyuncs.com/A-una/ff2.jpg') 0 0 no-repeat;
  background-size: 100% 100%;
}

.membershipCard-wrap {
  width: 100%;
  height: 100%;
  margin: auto;
  overflow: auto;
  background-color: rgba(255, 255, 255, 0.8);
}

.membershipCard-header {
  width: 680rpx;
  height: 160rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
}

.header-text {
  width: 520rpx;
  height: 100%;
  line-height: 80rpx;
  float: left;
}

.header-text-title {
  font-size: 50rpx;
}

.header-text-desc {
  font-size: 24rpx;
  color: #777;
}



.header-logo {
  width:150rpx;
height:150rpx;
  float: left;
}

.header-logo-img {
  padding-top:20rpx;
  width:80rpx;
height:80rpx;

}

.unit-wrap .i-swipeout-demo-item{
  border-bottom: 1px dashed transparent;
  background:transparent;
}
.unit-wrap .i-swipeout-demo-item>view{
 padding: 0;
}
.addCard{
  font-size: 26rpx;
  line-height: 0.6;
  color: #f34393;
}
.unit{
  font-size: 26rpx;
  color: #333;
  width:700rpx;
  height:220rpx;
  margin:auto;
  margin-bottom: 30rpx;
  
  background:rgba(255,255,255,0.8);
  border-radius:20rpx;
  box-shadow:0 3px 20px 0 rgba(0, 0, 0, 0.20);
}
.unit-top{
  position: relative;
  width:100%;
  height:180rpx;
}
.unit-top .normalShop{
  position: absolute;
  top: 15rpx;
  left:10rpx;
  background: url('http://llwell-wxapp.oss-cn-beijing.aliyuncs.com/A-cubic/gift.png') no-repeat center;
  background-size: 100% 100%;
  width:70rpx;
  height:65rpx;
  

}
.unit-top .mainShop{
  background: url('http://llwell-wxapp.oss-cn-beijing.aliyuncs.com/A-cubic/active-gift.png') no-repeat center;
  background-size: 100% 100%;
}
.unit-top image{
  width:100%;
  height:100%;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
  /* opacity: 0.5;   */
  /* z-index: -1;  */
}
.shopName{
  background:rgba(255, 255, 255, 0.5);
  width: 100%;
  position: absolute;
  top: 0;
}

.shopAddress{
  background:rgba(255, 255, 255, 0.5);
  width: 100%;
  position: absolute;
  bottom: 0;
}

.unit-bottom{
  font-size: 28rpx;
  color: #333;
  width:96%;
  height:40rpx;
  line-height:40rpx;
  text-align:right;
}
.noRecord{
  padding: 100px 30px;
}