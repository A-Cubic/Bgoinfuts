background-size:100% 100%;
display:block;

}
.content {
  width: 580rpx;
  height: 800rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: #fff;
  box-shadow:0 10px 20px 0 rgba(0,0,0,0.20);
  border-radius: 30rpx;
}
.img {
  width: 456rpx;
  height: 620rpx;
  margin: 0 auto;
  padding-top: 80rpx;
}
.mes{
  display: flex;
  margin-bottom: 50rpx;
}
.headImg{
  width: 80rpx;
  height: 80rpx;
  margin-right: 50rpx;
}
.canvasImg{
  width: 100%;
  height: 100%
}
.img image {
  width: 455rpx;
  height: 455rpx;
  display: block;
}
.content text {
  font-size: 22rpx;
  color: #000000;
  text-align: center;
  display: block;
}

