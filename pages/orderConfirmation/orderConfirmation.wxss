page {
  height: 100%;
}

.order-confirmation {
  position: relative;
  width: 100%;
  height: 100%;
  background: url('http://img.ui.cn/data/file/8/6/4/1053468.gif?imageMogr2/auto-orient/strip') 0 0 no-repeat;
  background-size: 100% 100%;
}

.order-confirmation-wrap {
  width: 100%;
  height: 100%;
  margin: auto;
  overflow: auto;
  background-color: rgba(255, 255, 255, 0.8);
}

.order-confirmation-header {
  width: 680rpx;
  height: 160rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
}

.header-text {
  width: 520rpx;
  height: 100%;
  line-height: 160rpx;
  float: left;
}

.header-text-title {
  font-size: 60rpx;
}

.header-logo {
  width: 160rpx;
  height: 160rpx;
  float: left;
}

.header-logo-img {
  width: 100%;
  height: 100%;
}

.order-confirmation-card {
  margin-top: 20rpx;
}
.unit{
  padding: 20rpx 30rpx 20rpx;
  border-top: 1px dashed #eeeeee;
}
.unit-left{
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;

}
.unit-left-pic{
  width: 100%
  
}
.unit-right{
  width: 72%;
  font-size: 30rpx;
}
.unit-right-name{
  display: inline-block;
  margin-bottom: 40rpx;
}
.cell{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.order-confirmation-submit{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

