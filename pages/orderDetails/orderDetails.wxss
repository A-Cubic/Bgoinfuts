page {
  height: 100%;
}

.order-details {
  position: relative;
  width: 100%;
  height: 100%;
  background: url('http://img.ui.cn/data/file/8/6/4/1053468.gif?imageMogr2/auto-orient/strip') 0 0 no-repeat;
  background-size: 100% 100%;
}

.order-details-wrap {
  width: 100%;
  height: 100%;
  margin: auto;
  overflow: auto;
  background-color: rgba(255, 255, 255, 0.8);
}

.order-details-header {
  width: 680rpx;
  height: 160rpx;
  margin: 20rpx auto 0;
  overflow: hidden;
}

.header-text {
  width: 520rpx;
  height: 100%;
  line-height: 160rpx;
  float: left;
}

.header-text-title {
  font-size: 60rpx;
}

.header-logo {
  width: 160rpx;
  height: 160rpx;
  float: left;
}

.header-logo-img {
  width: 100%;
  height: 100%;
}

.order-details-tabs{
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.8)
}
.order-details-tabs-panel{
   margin-bottom: 20rpx; 
}
.tabs-panel-btn{
  text-align: right;
}
.tabs-panel-btn-item{
  margin-right: 20rpx;
}
