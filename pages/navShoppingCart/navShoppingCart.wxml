<view class='shopping-cart'>
  <view class='shopping-cart-wrap'>
    <view class="shopping-cart-header">
      <view class="header-text">
        <view class="header-text-title">购物车</view>
        <view class="header-text-desc">{{cartForm.brief}}</view>
      </view>
      <view class="header-logo">
        <image class="header-logo-img" src="http://img.ui.cn/data/file/3/6/4/1053463.gif?imageMogr2/auto-orient/strip" />
      </view>
    </view>

    <van-card thumb="{{cartForm.imgUrl}}">
      <view slot="title">{{cartForm.title}}</view>
      <view slot="desc">{{cartForm.price}}</view>
      <view slot="footer">
        <i-panel slot="right-icon">
          <i-input-number value="{{cartForm.num}}" min="0" max="100" bindchange="addNum" />
        </i-panel>
      </view>
    </van-card>

    <view class="shopping-cart-total">合计{{cartForm.total}}元</view>
    <view class="shopping-cart-button">
      <i-button bind:click="toSettlement" shape="circle" type="success">
        去结算
      </i-button>
    </view>
  </view>
</view>