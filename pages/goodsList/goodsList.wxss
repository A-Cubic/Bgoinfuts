.cards-block{
  width: 310rpx;
  height: 255rpx;
  margin: auto;
  background: rgba(255,255,255,0.8);
  border-radius: 20rpx; 
  box-shadow: 0 3px 20px 0 rgba(0, 0, 0, 0.20);
}
.cards-block-bg{
  width: 100%;
  height: 200rpx;
}
.cards-block-bg-image{
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
